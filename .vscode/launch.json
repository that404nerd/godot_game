{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Godot Editor (Linux, LLDB)",
      "type": "lldb",
      "request": "launch",
      "program": "/usr/bin/godot",
      "args": [
        "--path",
        "${workspaceFolder}"
      ],
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "preLaunchTask": "build_module",
      "terminal": "integrated"
    }
  ]
}
